// ═══════════════════════════════════════════════════════════════════════════════
// CONSTANTS & CONFIGURATION
// ═══════════════════════════════════════════════════════════════════════════════

define
    // Button Indices
    FIRE        = XB1_RT,
    ADS         = XB1_LT,
    JUMP        = XB1_A,
    SLIDE       = XB1_B,
    SWAP        = XB1_Y,
    RELOAD      = XB1_X,
    SPRINT      = XB1_LS,
    MELEE       = XB1_RS,

    // Timing Constants (optimized for low latency)
    POLL_RATE   = 4,        // 4ms = 250Hz polling
    INPUT_DELAY = 2,        // Minimal input delay

    // Feature Toggle Indices
    ANTI_RECOIL     = 0,
    TURBO_JUMP      = 1,
    SLIDE_CANCEL    = 2,
    BHOP            = 3,
    SNAKE_MOVE      = 4,
    WALL_BOUNCE     = 5,

    // Value Indices
    AR_VERT         = 0,    // Anti-recoil vertical strength (auto-adapts)
    AR_HORI         = 1,    // Anti-recoil horizontal strength (auto-adapts)
    AR_DEADZONE     = 2,    // Movement deadzone for AR activation
    AR_ADAPT        = 3,    // Adaptive scaling (auto-adjusts to weapon)
    SC_MODE         = 4,    // Slide cancel mode (0=Legacy, 1=BO7, 2=Jump)
    SC_DELAY        = 5,    // Slide cancel delay timing
    BHOP_TIMING     = 6,    // Bhop jump timing
    SNAKE_SPEED     = 7,    // Snake movement speed
    SNAKE_RANGE     = 8,    // Snake movement strafe range
    WB_STRENGTH     = 9;    // Wall bounce assist strength (subtle)

// ═══════════════════════════════════════════════════════════════════════════════
// VARIABLES
// ═══════════════════════════════════════════════════════════════════════════════

// Feature Toggles
int features[6] = {
    TRUE,   // Anti-Recoil (enabled by default)
    FALSE,  // Turbo Jump
    FALSE,  // Slide Cancel
    FALSE,  // Bhop
    FALSE,  // Snake Movement
    FALSE   // Wall Bounce Assist
};

// Configuration Values
int values[10] = {
    35,     // AR_VERT: Base vertical recoil compensation (0-100)
    0,      // AR_HORI: Base horizontal recoil compensation (-50 to 50)
    12,     // AR_DEADZONE: Movement deadzone (0-30)
    75,     // AR_ADAPT: Adaptive scaling percentage (0-100, higher = more auto-adjust)
    1,      // SC_MODE: Slide cancel mode (0=Legacy, 1=BO7, 2=Jump)
    280,    // SC_DELAY: Slide cancel timing (200-400ms)
    45,     // BHOP_TIMING: Bhop jump timing (30-60ms)
    8,      // SNAKE_SPEED: Snake movement speed (5-15)
    25,     // SNAKE_RANGE: Snake strafe range (15-40)
    30      // WB_STRENGTH: Wall bounce assist strength (10-50, subtle)
};

// Runtime Variables
int ar_rumble_boost;
int ar_boost_timer;
int ar_adaptive_mult;       // Adaptive multiplier for anti-recoil
int ar_last_rumble;          // Track rumble changes for weapon detection
int firing;
int aiming;
int sliding;
int jumping;
int bhop_timer;
int snake_direction;
int snake_timer;
int wb_wall_detect;          // Wall bounce detection
int wb_assist_timer;         // Wall bounce assist timing
int in_menu;
int menu_pos;
int menu_depth;
int last_input_time;

// Performance tracking
int vm_time = POLL_RATE;

// ═══════════════════════════════════════════════════════════════════════════════
// INITIALIZATION
// ═══════════════════════════════════════════════════════════════════════════════

init {
    // Set ultra-low latency polling rate (250Hz = 4ms)
    vm_tctrl(vm_time - 1);

    // Initialize variables
    ar_boost_timer = 0;
    ar_adaptive_mult = 100;
    ar_last_rumble = 0;
    bhop_timer = 0;
    snake_timer = 0;
    snake_direction = 1;
    wb_wall_detect = 0;
    wb_assist_timer = 0;
    in_menu = FALSE;
    menu_pos = 0;
    menu_depth = 0;
}

// ═══════════════════════════════════════════════════════════════════════════════
// MAIN LOOP
// ═══════════════════════════════════════════════════════════════════════════════

main {

    // Update input states
    firing = get_val(FIRE) > 50;
    aiming = get_val(ADS) > 50;
    sliding = event_press(SLIDE);
    jumping = event_press(JUMP);

    // ═══════════════════════════════════════════════════════════════════════════
    // MENU SYSTEM (Lightweight)
    // ═══════════════════════════════════════════════════════════════════════════

    // Open menu: Hold ADS + Press OPTIONS
    if(get_val(ADS) > 90 && event_press(XB1_MENU) && !in_menu) {
        in_menu = TRUE;
        menu_pos = 0;
        menu_depth = 0;
    }

    // Menu navigation
    if(in_menu) {
        handle_menu();
        return; // Skip gameplay features while in menu
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // QUICK TOGGLES (Outside Menu)
    // ═══════════════════════════════════════════════════════════════════════════

    // Anti-Recoil Toggle: Hold LT + Press XBOX/PS
    if(get_val(ADS) > 90 && event_press(XB1_XBOX)) {
        features[ANTI_RECOIL] = !features[ANTI_RECOIL];
    }

    // Slide Cancel Toggle: Hold LB + Press RB
    if(get_val(XB1_LB) > 50 && event_press(XB1_RB)) {
        features[SLIDE_CANCEL] = !features[SLIDE_CANCEL];
    }

    // Turbo Jump Toggle: Hold LB + Press XBOX/PS
    if(get_val(XB1_LB) > 50 && event_press(XB1_XBOX)) {
        features[TURBO_JUMP] = !features[TURBO_JUMP];
    }

    // Bhop Toggle: Hold LB + Press VIEW
    if(get_val(XB1_LB) > 50 && event_press(XB1_VIEW)) {
        features[BHOP] = !features[BHOP];
    }

    // Snake Movement Toggle: Hold LB + Press MENU
    if(get_val(XB1_LB) > 50 && event_press(XB1_MENU)) {
        features[SNAKE_MOVE] = !features[SNAKE_MOVE];
        set_val(XB1_MENU, 0); // Prevent menu from opening
    }

    // Wall Bounce Assist Toggle: Hold LB + Press DOWN
    if(get_val(XB1_LB) > 50 && event_press(XB1_DOWN)) {
        features[WALL_BOUNCE] = !features[WALL_BOUNCE];
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // ADAPTIVE ANTI-RECOIL (BO7 Optimized - NO WEAPON TUNING NEEDED!)
    // ═══════════════════════════════════════════════════════════════════════════

    if(features[ANTI_RECOIL] && aiming && firing) {

        // Get rumble value for adaptive weapon detection
        int rumble = get_rumble(RUMBLE_B);
        if(rumble < get_rumble(RUMBLE_A) && get_rumble(RUMBLE_A) < 100) {
            rumble = get_rumble(RUMBLE_A);
        }

        // ADAPTIVE WEAPON DETECTION
        // Auto-detect weapon type based on rumble patterns
        int rumble_delta = abs(rumble - ar_last_rumble);

        // Adjust adaptive multiplier based on rumble intensity (weapon detection)
        if(rumble > 20 && rumble < 90) {
            // High rumble = high recoil weapon (SMG, AR full-auto)
            if(rumble > 60) {
                ar_adaptive_mult = 100 + ((rumble - 60) * values[AR_ADAPT] / 30);
            }
            // Medium rumble = medium recoil (Tactical Rifle, LMG)
            else if(rumble > 40) {
                ar_adaptive_mult = 90 + ((rumble - 40) * values[AR_ADAPT] / 50);
            }
            // Low rumble = low recoil (SMG, precise weapons)
            else {
                ar_adaptive_mult = 80 + ((rumble - 20) * values[AR_ADAPT] / 100);
            }
        }
        else {
            ar_adaptive_mult = 100;
        }

        ar_last_rumble = rumble;

        // Calculate adaptive recoil strength
        int vert_strength = (values[AR_VERT] * ar_adaptive_mult) / 100;
        int hori_strength = (values[AR_HORI] * ar_adaptive_mult) / 100;

        // Rumble-based burst boost (first shots have more recoil)
        if(rumble > 15 && rumble < 95) {
            ar_boost_timer += get_rtime();

            // Initial burst boost (first 200ms) - extra strong
            if(ar_boost_timer < 200) {
                vert_strength = vert_strength * 2 + (rumble / 2);
            }
            // Sustained fire compensation (after 200ms)
            else if(ar_boost_timer < 1000) {
                vert_strength = vert_strength + (rumble / 3);
            }
            // Long burst stability (after 1s, reduce slightly for precision)
            else {
                vert_strength = vert_strength + (rumble / 4);
            }
        }
        else {
            ar_boost_timer = 0;
        }

        // Apply horizontal compensation with micro-adjustments
        if(hori_strength != 0) {
            // Add slight randomization to feel more natural
            int hori_micro = (get_rtime() % 3) - 1; // -1, 0, or 1
            set_val(XB1_RX, get_val(XB1_RX) + hori_strength + hori_micro);
        }

        // Apply vertical compensation (downward to counter recoil)
        // Movement-aware deadzone handling
        int movement_mag = isqrt(pow(get_val(XB1_LX), 2) + pow(get_val(XB1_LY), 2));

        if(movement_mag > (values[AR_DEADZONE] * 3277)) {
            // Moving: apply recoil with deadzone compensation
            int movement_factor = (movement_mag / 6554) + values[AR_DEADZONE];
            set_val(XB1_RY, get_val(XB1_RY) + vert_strength + movement_factor);
        }
        else {
            // Stationary: apply direct recoil (strongest compensation)
            set_val(XB1_RY, get_val(XB1_RY) + vert_strength);
        }
    }
    else {
        ar_boost_timer = 0;
        ar_adaptive_mult = 100;
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // TURBO JUMP (Optimized)
    // ═══════════════════════════════════════════════════════════════════════════

    if(features[TURBO_JUMP] && get_val(JUMP) > 50) {
        // Ultra-fast turbo with minimal delay
        if(!combo_running(turbo_jump_combo)) {
            combo_run(turbo_jump_combo);
        }
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // SLIDE CANCEL (BO7 Enhanced)
    // ═══════════════════════════════════════════════════════════════════════════

    if(features[SLIDE_CANCEL] && sliding) {
        // Detect if in sprint (forward movement)
        int in_sprint = get_val(XB1_LY) < -30;

        if(in_sprint) {
            switch(values[SC_MODE]) {
                case 0: // Legacy slide cancel
                    combo_run(slide_cancel_legacy);
                    break;
                case 1: // BO7 optimized slide cancel
                    combo_run(slide_cancel_bo7);
                    break;
                case 2: // Jump cancel variant
                    combo_run(slide_cancel_jump);
                    break;
            }
        }
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // BHOP (Bunny Hop) - NEW FEATURE
    // ═══════════════════════════════════════════════════════════════════════════

    if(features[BHOP]) {
        // Auto-jump on landing detection
        // When jump button is held, automatically re-jump on landing
        if(get_val(JUMP) > 50 && !combo_running(bhop_combo)) {
            bhop_timer += get_rtime();

            // Trigger next jump based on timing (simulates landing)
            if(bhop_timer >= values[BHOP_TIMING]) {
                combo_run(bhop_combo);
                bhop_timer = 0;
            }
        }
        else if(get_val(JUMP) < 10) {
            bhop_timer = 0;
        }
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // SNAKE MOVEMENT - NEW FEATURE
    // ═══════════════════════════════════════════════════════════════════════════

    if(features[SNAKE_MOVE] && (get_ptime(SLIDE) > 100 || get_val(XB1_DOWN) > 50)) {
        // Rapid left-right strafe while prone/crouched
        snake_timer += get_rtime();

        if(snake_timer >= (100 / values[SNAKE_SPEED])) {
            // Switch direction
            snake_direction *= -1;
            snake_timer = 0;
        }

        // Apply strafe movement
        int snake_offset = snake_direction * values[SNAKE_RANGE] * 655;
        set_val(XB1_LX, get_val(XB1_LX) + snake_offset);
    }
    else {
        snake_timer = 0;
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // WALL BOUNCE ASSIST - NEW FEATURE (Subtle, Not Overpowered)
    // ═══════════════════════════════════════════════════════════════════════════

    if(features[WALL_BOUNCE]) {
        // Detect wall bounce scenario: jumping near wall + looking at angle
        int near_wall = abs(get_val(XB1_LX)) > 20 || abs(get_val(XB1_LY)) > 20;
        int looking_angle = abs(get_val(XB1_RX)) > 15;

        if(get_val(JUMP) > 50 && near_wall && looking_angle) {
            wb_assist_timer += get_rtime();

            // Subtle assist: slight aim adjustment during wall approach
            if(wb_assist_timer > 50 && wb_assist_timer < 250) {
                // Gentle pull toward wall angle (very subtle)
                int assist_strength = values[WB_STRENGTH] / 10;

                // Vertical assist (slight upward aim)
                if(get_val(XB1_RY) > -15) {
                    set_val(XB1_RY, get_val(XB1_RY) - assist_strength);
                }

                // Horizontal assist (maintain wall angle)
                if(abs(get_val(XB1_RX)) < 40) {
                    int direction = (get_val(XB1_RX) > 0) ? 1 : -1;
                    set_val(XB1_RX, get_val(XB1_RX) + (assist_strength * direction));
                }
            }

            // Auto jump timing assist (perfect bounce timing)
            if(wb_assist_timer > 280 && wb_assist_timer < 320) {
                if(!combo_running(wall_bounce_jump)) {
                    combo_run(wall_bounce_jump);
                }
            }
        }
        else {
            wb_assist_timer = 0;
        }
    }
    else {
        wb_assist_timer = 0;
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// MENU HANDLER
// ═══════════════════════════════════════════════════════════════════════════════

function handle_menu() {

    // Exit menu: Press B or OPTIONS
    if(event_press(XB1_B) || event_press(XB1_MENU)) {
        in_menu = FALSE;
        return;
    }

    // Navigate menu
    if(event_press(XB1_UP)) {
        menu_pos = (menu_pos - 1);
        if(menu_pos < 0) menu_pos = 15; // Wrap around (6 features + 10 values)
    }
    if(event_press(XB1_DOWN)) {
        menu_pos = (menu_pos + 1) % 16; // 16 items total (6 features + 10 values)
    }

    // Adjust values
    if(event_press(XB1_RIGHT)) {
        adjust_value(menu_pos, 1);
    }
    if(event_press(XB1_LEFT)) {
        adjust_value(menu_pos, -1);
    }

    // Toggle features with A button
    if(event_press(XB1_A)) {
        if(menu_pos < 5) {
            features[menu_pos] = !features[menu_pos];
        }
    }

    // Block all gameplay inputs while in menu
    set_val(FIRE, 0);
    set_val(ADS, 0);
    set_val(JUMP, 0);
    set_val(SLIDE, 0);
}

// ═══════════════════════════════════════════════════════════════════════════════
// VALUE ADJUSTMENT HELPER
// ═══════════════════════════════════════════════════════════════════════════════

function adjust_value(int idx, int dir) {
    int step = 1;

    // Different step sizes for different values
    if(idx == AR_VERT || idx == AR_HORI || idx == AR_ADAPT) step = 2;
    if(idx == SC_DELAY) step = 10;
    if(idx == WB_STRENGTH) step = 5;

    // Adjust value
    values[idx] += (dir * step);

    // Clamp to valid ranges
    if(idx == AR_VERT) {
        if(values[idx] < 0) values[idx] = 0;
        if(values[idx] > 100) values[idx] = 100;
    }
    else if(idx == AR_HORI) {
        if(values[idx] < -50) values[idx] = -50;
        if(values[idx] > 50) values[idx] = 50;
    }
    else if(idx == AR_DEADZONE) {
        if(values[idx] < 0) values[idx] = 0;
        if(values[idx] > 30) values[idx] = 30;
    }
    else if(idx == AR_ADAPT) {
        if(values[idx] < 0) values[idx] = 0;
        if(values[idx] > 100) values[idx] = 100;
    }
    else if(idx == SC_MODE) {
        if(values[idx] < 0) values[idx] = 2;
        if(values[idx] > 2) values[idx] = 0;
    }
    else if(idx == SC_DELAY) {
        if(values[idx] < 200) values[idx] = 200;
        if(values[idx] > 400) values[idx] = 400;
    }
    else if(idx == BHOP_TIMING) {
        if(values[idx] < 30) values[idx] = 30;
        if(values[idx] > 60) values[idx] = 60;
    }
    else if(idx == SNAKE_SPEED) {
        if(values[idx] < 5) values[idx] = 5;
        if(values[idx] > 15) values[idx] = 15;
    }
    else if(idx == SNAKE_RANGE) {
        if(values[idx] < 15) values[idx] = 15;
        if(values[idx] > 40) values[idx] = 40;
    }
    else if(idx == WB_STRENGTH) {
        if(values[idx] < 10) values[idx] = 10;
        if(values[idx] > 50) values[idx] = 50;
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// COMBO SEQUENCES (Optimized Timing)
// ═══════════════════════════════════════════════════════════════════════════════

// Turbo Jump Combo
combo turbo_jump_combo {
    set_val(JUMP, 100);
    wait(INPUT_DELAY);
    set_val(JUMP, 0);
    wait(2);
}

// Legacy Slide Cancel
combo slide_cancel_legacy {
    set_val(SLIDE, 100);
    wait(INPUT_DELAY);
    set_val(SLIDE, 0);
    wait(values[SC_DELAY]);
    set_val(SLIDE, 100);
    wait(INPUT_DELAY);
    set_val(JUMP, 100);
    wait(INPUT_DELAY);
}

// BO7 Optimized Slide Cancel
combo slide_cancel_bo7 {
    set_val(SLIDE, 100);
    wait(INPUT_DELAY);
    wait(values[SC_DELAY]);
    // Quick ADS tap to cancel slide
    set_val(ADS, 100);
    wait(INPUT_DELAY);
    set_val(ADS, 0);
    wait(INPUT_DELAY);
    // Immediate jump to maintain momentum
    set_val(JUMP, 100);
    wait(INPUT_DELAY);
    set_val(JUMP, 0);
    wait(INPUT_DELAY);
}

// Jump Slide Cancel (MWIII/BO7 variant)
combo slide_cancel_jump {
    set_val(SLIDE, 100);
    wait(INPUT_DELAY);
    set_val(SLIDE, 0);
    wait(values[SC_DELAY]);
    set_val(JUMP, 100);
    wait(INPUT_DELAY);
    wait(INPUT_DELAY);
}

// Bhop Combo
combo bhop_combo {
    set_val(JUMP, 100);
    wait(INPUT_DELAY);
    set_val(JUMP, 0);
    wait(INPUT_DELAY);
}

// Wall Bounce Jump Combo (Subtle Assist)
combo wall_bounce_jump {
    set_val(JUMP, 100);
    wait(INPUT_DELAY);
    wait(INPUT_DELAY);
}

